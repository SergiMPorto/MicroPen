<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Recuperar"
    android:background="@color/micropen">


    <TextView
        android:id="@+id/introduce"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_marginTop="250dp"
        android:fontFamily="@font/bon"
        android:text="Introduce tu email"
        android:textAlignment="center"
        android:textColorHint="@color/texto"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/emailR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/emailR"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center"
        android:hint="Email"
        android:fontFamily="@font/bon"
        app:layout_constraintTop_toBottomOf="@id/introduce"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <ImageButton
        android:id="@+id/restablecer"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/restablecerpassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@id/emailR" />


 />


</androidx.constraintlayout.widget.ConstraintLayout>